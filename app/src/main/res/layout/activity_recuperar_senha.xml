<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.RecuperarSenhaActivity">

    <EditText
        android:id="@+id/etRecuperarEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/corner_round"
        android:hint="Informe o e-mail cadastrado no sistema"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btRecuperarEnviar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/corner_round"
        android:drawableLeft="@drawable/ic_baseline_send_24"
        android:enabled="false"
        android:text="Enviar" />

</LinearLayout>