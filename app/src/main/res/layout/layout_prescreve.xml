<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llPrescreve"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAdapterPrescreveMedicamento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Nome do medicamento" />

        <TextView
            android:id="@+id/tvAdapterPrescreveDosagem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Dosagem" />

        <TextView
            android:id="@+id/tvAdapterPrescreveHorario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="HorÃ¡rio" />

        <ImageView
            android:id="@+id/ivAdapterPrescreveSuspender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/preto"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_baseline_schedule_24"
            android:visibility="invisible"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cinza_3" />

</LinearLayout>